<html>
<%- include('../partials/head'); %>

    <body class="grid-container">
        <header class="nav-header">
            <%- include('../partials/header'); %>
        </header>

        <%- include('../partials/nav-bar') %>

            <main class="main-content-edit">
                <section class="section-container-edit">
                    <div class="title-edit">
                        <p>Creacion de producto</p>
                        <hr class="home-hr" />
                    </div>
                    <% if (locals.error) { %> 
                    <% error.forEach(element => { %>
                        <p class ="msg-error"><%= element.msg%> </p>                        
                    <%  });
                       } 
                    %>
                    <form class="form-show-data-rows" action="/products/create" method="POST" enctype="multipart/form-data">
                        <div class="form-select-container">
                            <label for="name" class="label-text">Nombre:</label>
                            <input class="input-type-text" type="text" name="name" id="name" value="<%= locals.oldData && oldData.name ? oldData.name : null %>" >
                        </div>
                        <% if (locals.errors && errors.name) { %>
                            <div class="text-danger">
                                <%= errors.name.msg %>
                            </div>
                        <% } %>
                        <div class="form-select-container">
                            <label for="description" class="label-text">Descripcion:</label>
                            <input class="input-type-text" type="text" name="description" id="description" value="<%= locals.oldData && oldData.descripcion ? oldData.descripcion : null %>" >
                        </div>
                        <% if (locals.errors && errors.descripcion) { %>
                            <div class="text-danger">
                                <%= errors.descripcion.msg %>
                            </div>
                        <% } %>
                        <div class="form-select-container">
                            <label for="offer" class="label-text">Oferta:</label>
                            <select name="offer" class="input-type-text">
                                <option value="1">Sí</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <% if (locals.errors && errors.offer) { %>
                            <div class="text-danger">
                                <%= errors.offer.msg %>
                            </div>
                        <% } %>
                        <div class="form-select-container">
                            <label for="discount" class="label-text">Descuento:</label>
                            <select name="discount" class="input-type-text">
                                <option value="1">Sí</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <% if (locals.errors && errors.discount) { %>
                            <div class="text-danger">
                                <%= errors.discount.msg %>
                            </div>
                        <% } %>
                        <div class="form-select-container">
                            <label for="price" class="label-text">Precio:</label>
                            <input class="input-type-text" type="number" name="price" id="price" value="<%= locals.oldData && oldData.price ? oldData.price : null %>" >
                        </div>
                        <% if (locals.errors && errors.price) { %>
                            <div class="text-danger">
                                <%= errors.price.msg %>
                            </div>
                        <% } %>
                        <div class="form-select-container">
                            <label for="stock" class="label-text">Stock:</label>
                            <input class="input-type-text" type="number" name="stock" value="<%= locals.oldData && oldData.stock ? oldData.stock : null %>" >
                        </div>
                        <% if (locals.errors && errors.stock) { %>
                            <div class="text-danger">
                                <%= errors.stock.msg %>
                            </div>
                        <% } %>
                        <div class="form-select-container">
                            <label for="id_category" class="label-text">Cat(id):</label>
                            <input class="input-type-text" type="number" name="id_category" id="id_category" value="<%= locals.oldData && oldData.id_category ? oldData.id_category : null %>" >
                        </div>
                        <% if (locals.errors && errors.id_category) { %>
                            <div class="text-danger">
                                <%= errors.id_category.msg %>
                            </div>
                        <% } %>
                        <div class="form-select-container">
                            <label for="id_brand" class="label-text">Marc(id):</label>
                            <input class="input-type-text" type="number" name="id_brand" id="id_brand" value="<%= locals.oldData && oldData.id_brand ? oldData.id_brand : null %>" >
                        </div>
                        <% if (locals.errors && errors.id_brand) { %>
                            <div class="text-danger">
                                <%= errors.id_brand.msg %>
                            </div>
                        <% } %>
                        <div class="form-select-container">
                            <label for="imageProd" class="label-text">Imagen:</label>
                            <input class="input-type-text" type="file" name="imageProd" />
                        </div>
                        <% if (locals.errors && errors.imageProd) { %>
                            <div class="text-danger">
                                <%= errors.imageProd.msg %>
                            </div>
                        <% } %>
                        <div class="form-button-container">
                            <button class="button-standar" type="submit">Ingresar</button>
                        </div>
                    </form>
                </section>
            </main>

            <footer class="nav-footer">
                <%- include('../partials/footer'); %>
            </footer>
    </body>

</html>
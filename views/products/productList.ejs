<html>
    <%- include('../partials/head'); %>
<body class="grid-container">
    <header class="nav-header">
        <%- include('../partials/header'); %>
    </header>
    <%- include('../partials/nav-bar') %>
    <main class="nav-main">
        <div class="cotenedor-2">
              <main class="main-home">
         <div class="title">
            <p>APROVECHA ESTOS DESCUENTAZOS</p>
            <hr class="home-hr">
         </div>
         <article class="products-off">
            <% products.forEach(function(product,index){ %>
                <div class="box-products <%= index %>" >
                    <div class="product" >
                        <img class="product-img" src="https://http2.mlstatic.com/D_NQ_NP_732978-MLA46116430743_052021-O.webp" alt="Foto de producto">
                        <div class="box-text-off">
                            <p>Oferta del dia</p>
                            </div>
                        <p><%=product.name %></p>
                       <p class="prize-through"><%=product.price %></p>
                       <div class="box-prize-off">
                       <p><%=product.price %></p>
                       <p><%=product.discount %></p>
                       </div>
                       <p class="product-footer"><%=product.description %></p>
                    </div>
                 </div>
                 <% }) %>
        </div>
    </main>
 
  
</body>
</html>